{% extends 'base.html.twig' %}

{% block title %}Новостной сайт Киренского.{% endblock %}

{% block body %}

    <div class="container">
        {% for new in news %}
            <div class="row border rounded border-dark p-2 mb-2">
                <h1 class="display-6 fw-normal">{{ new.name|e }}</h1>
                <p class="lead fw-normal">{{ new.annotation|e }}</p>
                <a class="btn btn-outline-danger" href="{{ path('news', {id: new.id|e})}}">Открыть новость</a>
                <div class="row mt-1">
                    <div class="col-sm-9 font-monospace">{{ new.commentsCount|e }} <i class="bi bi-card-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                            </svg></i>
                    </div>
                    <div class="col-sm-3 font-monospace">{{ new.date|date }}</div>
                </div>
            </div>
        {% endfor %}

        <div class="row mt-3">
            {% for page in pages %}
            <div class="m-2 col">
                <a href="{{ page|e }}" class="btn border {% if page == actual_page %}btn-info{% endif %}" role="button">{{ page|e }}</a>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
